<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdFragment">

    <!-- TODO: Update blank fragment layout -->

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/init_SDK_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="140dp"
            android:layout_marginTop="112dp"
            android:text="@string/init_text"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/banner_Btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="4dp"
            android:text="@string/banner_text"
            app:layout_constraintEnd_toEndOf="@+id/init_SDK_button"
            app:layout_constraintTop_toBottomOf="@+id/init_SDK_button" />

        <Button
            android:id="@+id/interstitialAd_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="24dp"
            android:text="@string/interstitialAd"
            app:layout_constraintStart_toStartOf="@+id/banner_Btn"
            app:layout_constraintTop_toBottomOf="@+id/banner_Btn" />

        <Button
            android:id="@+id/rewardBtton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="@string/rewardedVideosAD_button"
            app:layout_constraintStart_toStartOf="@+id/interstitialAd_button"
            app:layout_constraintTop_toBottomOf="@+id/interstitialAd_button" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>